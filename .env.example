# =================================
# PROMO REMNAWAVE BOT CONFIGURATION
# =================================

# --------------------------------
# TELEGRAM BOT SETTINGS
# --------------------------------
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# --------------------------------
# REMNAWAVE API SETTINGS
# --------------------------------
# URL вашей панели Remnawave
REMNAWAVE_BASE_URL=https://manage.edencore.cc

# API токен Remnawave (создайте в настройках панели)
REMNAWAVE_TOKEN=your_remnawave_api_token_here

# --------------------------------
# SECURITY SETTINGS (ОБЯЗАТЕЛЬНО!)
# --------------------------------
# Telegram ID администраторов (разделенные запятыми)
# Получите ваш ID у @userinfobot
ADMIN_USER_IDS=123456789,987654321

# --------------------------------
# INBOUND CONFIGURATION
# --------------------------------
# UUID инбаундов для создания пользователей (разделенные запятыми)
# Найдите в панели Remnawave → Инбаунды → UUID
DEFAULT_INBOUND_IDS=123e4567-e89b-12d3-a456-426614174000,987fcdeb-a123-45e6-f789-012345678901

# Альтернативно - числовые ID инбаундов
# DEFAULT_INBOUND_IDS=1,2,3

# --------------------------------
# BOT SETTINGS
# --------------------------------
# Префикс для имен пользователей
DEFAULT_UUID_PREFIX=promo-

# Максимальное количество подписок за раз
MAX_SUBSCRIPTIONS_PER_REQUEST=100

# --------------------------------
# LOGGING
# --------------------------------
# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# --------------------------------
# OPTIONAL SETTINGS
# --------------------------------
# Протокол по умолчанию (не обязательно)
DEFAULT_PROTOCOL=vless

# Токен Caddy (если используется, не обязательно)
# REMNAWAVE_CADDY_TOKEN=your_caddy_token_here